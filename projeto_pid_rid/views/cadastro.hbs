<div class="container mt-5">
        <div class="card shadow p-4">
            <h2 class="mb-4 text-center">Cadastro</h2>
            <form>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="nome" class="form-label">Nome Completo</label>
                        <input type="text" class="form-control" id="nome" required>
                    </div>
                    <div class="col-md-6">
                        <label for="cpf" class="form-label">CPF</label>
                        <input type="text" class="form-control" id="cpf" required>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="siape" class="form-label">SIAPE</label>
                        <input type="text" class="form-control" id="siape" required>
                    </div>
                    <div class="col-md-6">
                        <label for="email" class="form-label">E-mail</label>
                        <input type="email" class="form-control" id="email" required>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="senha" class="form-label">Senha</label>
                        <input type="password" class="form-control" id="senha" required>
                    </div>
                    <div class="col-md-6">
                        <label for="tipoServidor" class="form-label">Tipo de Servidor</label>
                        <select class="form-control" id="tipoServidor" required>
                            <option value="">Selecione</option>
                            <option value="Efetivo">Efetivo</option>
                            <option value="Substituto">Substituto</option>
                        </select>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="regime" class="form-label">Regime de Trabalho</label>
                    <select class="form-control" id="regime" required>
                        <option value="">Selecione</option>
                        <option value="20">20 horas</option>
                        <option value="40">40 horas</option>
                    </select>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Cadastrar</button>
                </div>
            </form>
        </div>
    </div>
