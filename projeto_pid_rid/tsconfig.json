{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",  // Pasta onde os arquivos compilados ser√£o salvos
    "rootDir": "./"       // Raiz do projeto
  },
  "include": [
    "src/**/*",
    "types/**/*", 
    "**/*.ts"], // Inclui todos os arquivos .ts no projeto
  "exclude": ["node_modules"]
}