<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Criação de PID</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .card-body {
            padding: 1.5rem;
        }
        .atividade-row, .disciplina-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
        }
        .atividade-row label, .disciplina-row label {
            flex: 1;
            font-weight: 600;
        }
        .atividade-row input, .disciplina-row input {
            width: 120px;
        }
        h3 {
            background-color: #f7f7f7;
            padding: 0.5rem;
            border-radius: 5px;
            margin-bottom: 1rem;
        }
        .section-title {
            font-size: 1.25rem;
            margin-top: 2rem;
            margin-bottom: 1.5rem;
            color: #4a90e2;
        }
        .form-label {
            font-weight: 500;
        }
        .btn-submit {
            background-color: #4a90e2;
            border-color: #4a90e2;
            padding: 0.8rem 2rem;
            font-size: 1.1rem;
        }
        .btn-submit:hover {
            background-color: #357ab7;
            border-color: #357ab7;
        }
        .container {
            max-width: 1100px; /* Aumenta a largura do formulário */
        }
        .form-control:focus {
            box-shadow: 0 0 5px rgba(72, 134, 255, 0.5);
            border-color: #4a90e2;
        }
        .btn-delete {
            background-color: #dc3545;
            border-color: #dc3545;
            color: white;
            padding: 0.3rem 1rem;
            font-size: 0.9rem;
        }
        .btn-delete:hover {
            background-color: #c82333;
            border-color: #c82333;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="card shadow-sm p-4 mx-auto">
            <h2 class="text-center mb-4 text-primary">Criação de PID</h2>
            <form method="post" action="/projeto_pid_rid/newpid">
                <div class="row mb-4">
                    <div class="col-md-6">
                        <label for="ano" class="form-label">Ano Letivo</label>
                        <input type="number" class="form-control" id="ano" name="ano" placeholder="Digite o ano letivo..." required />
                    </div>
                    <div class="col-md-6">
                        <label for="semestre" class="form-label">Semestre Letivo</label>
                        <select class="form-control" id="semestre" name="semestre" required>
                            <option value="">Selecione o semestre...</option>
                            <option value="1">1º Semestre</option>
                            <option value="2">2º Semestre</option>
                        </select>
                    </div>
                </div>

                <!-- Seção de Disciplinas -->
                <div class="secao-atividade">
                    <h3 class="section-title">Disciplinas</h3>
                    <div id="disciplinas-lista">
                        <!-- As disciplinas serão adicionadas aqui -->
                    </div>
                    <div class="text-end">
                        <button type="button" class="btn btn-primary btn-sm" onclick="adicionarDisciplina()">+ Adicionar Disciplina</button>
                    </div>
                </div>

                <div id="atividades">
                    <!-- Atividades de Preparação e Manutenção do Ensino -->
                    <div class="secao-atividade">
                        <h3 class="section-title">Atividades de Preparação e Manutenção do Ensino</h3>
                        <div class="atividade-row">
                            <label for="atividade1">Estudo, Planejamento e Elaboração de Materiais e Práticas Pedagógicas</label>
                            <input type="number" class="form-control" id="atividade1" name="atividade1" placeholder="Carga horária" />
                        </div>
                        <div class="atividade-row">
                            <label for="atividade2">Preparação de Aulas Teóricas e Práticas</label>
                            <input type="number" class="form-control" id="atividade2" name="atividade2" placeholder="Carga horária" />
                        </div>
                        <div class="atividade-row">
                            <label for="atividade3">Organização de Material Pedagógico</label>
                            <input type="number" class="form-control" id="atividade3" name="atividade3" placeholder="Carga horária" />
                        </div>
                        <div class="atividade-row">
                            <label for="atividade4">Produção e Correção dos Instrumentos de Avaliação</label>
                            <input type="number" class="form-control" id="atividade4" name="atividade4" placeholder="Carga horária" />
                        </div>
                        <div class="atividade-row">
                            <label for="atividade5">Registro de Atividades Acadêmicas</label>
                            <input type="number" class="form-control" id="atividade5" name="atividade5" placeholder="Carga horária" />
                        </div>
                    </div>

                    <!-- Atividades de Apoio ao Ensino -->
                    <div class="secao-atividade">
                        <h3 class="section-title">Atividades de Apoio ao Ensino</h3>
                        <div class="atividade-row">
                            <label for="atividade6">Atendimento de Alunos Extraclasse (física ou virtual)</label>
                            <input type="number" class="form-control" id="atividade6" name="atividade6" placeholder="Carga horária" />
                        </div>
                        <div class="atividade-row">
                            <label for="atividade7">Reuniões Pedagógicas, Conselhos de Classe e/ou Reuniões de Pais</label>
                            <input type="number" class="form-control" id="atividade7" name="atividade7" placeholder="Carga horária" />
                        </div>
                        <div class="atividade-row">
                            <label for="atividade8">Participação em Banca de Trabalho de Conclusão de Curso</label>
                            <input type="number" class="form-control" id="atividade8" name="atividade8" placeholder="Carga horária" />
                        </div>
                        <div class="atividade-row">
                            <label for="atividade9">Atendimento de Alunos em Regime de Exercício Domiciliar</label>
                            <input type="number" class="form-control" id="atividade9" name="atividade9" placeholder="Carga horária" />
                        </div>
                    </div>

                    <!-- Continue para outras seções de atividades -->
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-submit">Enviar</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Bootstrap JS e Dependências -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
    
    <script>
        // Função para adicionar disciplina
        function adicionarDisciplina() {
            const disciplinaContainer = document.getElementById('disciplinas-lista');
            const disciplinaDiv = document.createElement('div');
            disciplinaDiv.classList.add('disciplina-row');
            
            disciplinaDiv.innerHTML = `
                <label for="disciplinaNome">Nome da Disciplina</label>
                <input type="text" class="form-control" name="disciplinaNome[]" placeholder="Nome da Disciplina" required />
                
                <label for="disciplinaCargaHoraria">Carga Horária</label>
                <input type="number" class="form-control" name="disciplinaCargaHoraria[]" placeholder="Carga horária" required />
                
                <button type="button" class="btn-delete" onclick="removerDisciplina(this)">Excluir</button>
            `;
            
            disciplinaContainer.appendChild(disciplinaDiv);
        }

        // Função para remover disciplina
        function removerDisciplina(button) {
            const disciplinaDiv = button.parentElement;
            disciplinaDiv.remove();
        }
    </script>
</body>
</html>
