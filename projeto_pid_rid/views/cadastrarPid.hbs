        <input type="number" class="form-control" name="atividades[${proximoIndice}][cargaHoraria]" placeholder="Carga horária" required />
        
        <button type="button" class="btn-delete" onclick="removerDisciplina(this)">Excluir</button>
    `;

    disciplinaContainer.appendChild(disciplinaDiv);
}

// Função para remover disciplina
function removerDisciplina(button) {
    const disciplinaDiv = button.parentElement;
    disciplinaDiv.remove();
}
 // Função para inicializar todas as cargas horárias com 0
        function inicializarCargasHorarias() {
            const inputsCargaHoraria = document.querySelectorAll('input[type="number"]');
            inputsCargaHoraria.forEach(input => {
                input.value = 0;
            });
}

// Inicializar cargas horárias quando a página for carregada
        document.addEventListener('DOMContentLoaded', inicializarCargasHorarias);
