function adicionarDisciplina() {
    const disciplinaContainer = document.getElementById('disciplinas-lista');

    // Determinar o próximo índice disponível
    const proximoIndice = disciplinaContainer.children.length + 83; // Como o último foi 82, o próximo será 83

    const disciplinaDiv = document.createElement('div');
    disciplinaDiv.classList.add('disciplina-row');

    disciplinaDiv.innerHTML = `
        <label for="disciplinaNome">Nome da Disciplina</label>
        <input type="hidden" name="atividades[${proximoIndice}][tipo]" value="Disciplina" />
        <input type="text" class="form-control" name="atividades[${proximoIndice}][descricao]" placeholder="Nome da Disciplina" required />

