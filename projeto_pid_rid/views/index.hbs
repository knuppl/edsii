<h2 class="text-center mb-4">Login</h2>

{{#if errorMessage}}
    <div class="alert alert-danger" role="alert">
        {{errorMessage}}
    </div>
{{/if}}

<form method="POST" action="/docente/login">
    <div class="mb-3">
        <input type="text" class="form-control" id="usuario" name="usuario" placeholder="Usuário" required>
    </div>

    <div class="mb-3">
        <input type="password" class="form-control" id="senha" name="senha" placeholder="Senha" required>
    </div>

    <button type="submit" class="btn btn-primary w-100">Entrar</button>

    <div class="text-center mt-3">
        <a href="/docente/cadastrarDocente" class="text-decoration-none">Não tem login? Cadastre-se!</a>
    </div>
</form>
